@if (Session["Username"] == null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Usuario")</li>
    </ul>
}

else
{

    <ul class="nav navbar-nav navbar-right">
        @if (Session["Role"] == "Admin")
    {
        <li>
            @Html.ActionLink((string)Session["Username"], "AdminProfile", "Home")
        </li>
}
else
{
        <li style="display:inline-block">
            @Html.ActionLink((string)Session["Username"], "ClientProfile", "Home")
        </li>
}
        <li>@Html.ActionLink("Cerrar sesión", "LogOut", new { Controller = "Usuario" })</li>
    </ul>
    

}
