@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SGE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: black">
        <div class="container">
            <div class="navbar-header row">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/Home">
                            <span class="glyphicon glyphicon-home"></span>
                        </a>
                    </li>
                    <li>@Html.ActionLink("Mapa de transformadores", "Map", "Transformador")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
            @Html.Partial("_LoginPartial")

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
        if (Session["Username"] != null)
        {
            if (Session["Role"] != "Admin")
            {
                <li>@Html.ActionLink("Mis puntos", "Index", "Home")</li>
                <li>@Html.ActionLink("Mis dispositivo", "Index", "DispositivoCliente")</li>
                <li>@Html.ActionLink("Mis reglas", "Simplex", "Home")</li>
                <li>@Html.ActionLink("Mis Consumos", "Index", "DispositivoCliente")</li>
                <li>@Html.ActionLink("Estado de mi hogar", "Index", "DispositivoCliente")</li>
                <li>@Html.ActionLink("Mi optimo consumo", "Index", "DispositivoCliente")</li>
}
else
{
                <li>@Html.ActionLink("Hogares", "Index", "Clientes")</li>
                <li>@Html.ActionLink("Dispositivos", "Index", "TemplateDispositivo")</li>
                <li>@Html.ActionLink("Reportes", "Index", "Report")</li>
}
}
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
    
        @RenderBody()       

        <hr />
        <footer class="container">
            <div class="row">
                <span class="col-sm-10">SGE - @DateTime.Now.Year</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
