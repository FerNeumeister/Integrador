@model Integrador.Models.DispositivoInteligente

@{
    ViewBag.Title = "Editar dispositivo inteligente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="background-color: indigo; color: whitesmoke; padding-bottom: 15px">
    <h2>Editar dispositivo inteligente</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                <label>Nombre</label>
                @Html.EditorFor(model => model.NombreGenerico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreGenerico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Consumo</label>
                @Html.EditorFor(model => model.Consumo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Consumo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                <label>Uso mensual máximo</label>
                @Html.EditorFor(model => model.UsoMensualMax, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UsoMensualMax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Uso mensual mínimo</label>
                @Html.EditorFor(model => model.UsoMensualMin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UsoMensualMin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Encendido</label>
                <div class="checkbox">
                    @Html.EditorFor(model => model.Encendido)
                    @Html.ValidationMessageFor(model => model.Encendido, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Modo ahorro</label>
                <div class="checkbox">
                    @Html.EditorFor(model => model.ModoAhorroDeEnergia)
                    @Html.ValidationMessageFor(model => model.ModoAhorroDeEnergia, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" style="background-color:indigo; color: whitesmoke" />
                |
                @Html.ActionLink("Volver al listado", "Index", "DispositivoCliente")
            </div>
        </div>
    </div>
}
