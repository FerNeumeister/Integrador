@model Integrador.Models.DispositivoInteligente

@{
    ViewBag.Title = "Agregar dispositivo inteligente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br><br><br>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
        <div class="jumbotron" style="background-color: indigo; color: whitesmoke">
            <h1>Agregar dispositivo inteligente</h1>
        </div>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <label>Nombre</label>
                    @Html.EditorFor(model => model.NombreGenerico, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreGenerico, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Consumo</label>
                    @Html.EditorFor(model => model.Consumo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Consumo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Uso mensual máximo</label>
                    @Html.EditorFor(model => model.UsoMensualMax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UsoMensualMax, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Uso mensual mínimo</label>
                    @Html.EditorFor(model => model.UsoMensualMin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UsoMensualMin, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Encendido</label>
                    @Html.EditorFor(model => model.Encendido, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Encendido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Modo ahorro de energía</label>
                    @Html.EditorFor(model => model.ModoAhorroDeEnergia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ModoAhorroDeEnergia, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" value="Agregar" class="btn btn-default" style="color: whitesmoke; background-color: indigo"/>
            <br><br>
        </div>
}

<div>
    @Html.ActionLink("Volver a lista", "Index")
</div>
