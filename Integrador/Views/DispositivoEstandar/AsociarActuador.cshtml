@model Integrador.Models.Helper.ActuadorDispositivo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="background-color: indigo; color: whitesmoke; padding-bottom: 20px; padding-top: 15px; padding-left: 30px">
    <h2>Asociar un actuador</h2>
    <h3>@Model.Dispositivo.Tipo @Model.Dispositivo.NombreGenerico</h3>
</div>

@using (Html.BeginForm("AsociarActuador", "DispositivoEstandar", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Accion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Accion, new SelectList(ViewBag.Acciones, "Value", "Text"), new { @class = "form-control dropdown-field" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Reglas, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.ListBoxFor(x => x.Reglas, new MultiSelectList(ViewBag.Reglas, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Asociar" class="btn btn-default" style="color: whitesmoke; background-color: indigo" />
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver al listado", "Index", "DispositivoCliente", new { id = Session["ClientId"] }, null)
</div>
