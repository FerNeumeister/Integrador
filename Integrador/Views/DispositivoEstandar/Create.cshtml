@model Integrador.Models.DispositivoEstandar

@{
    ViewBag.Title = "Agregar dispositivo estándar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="jumbotron" style="background-color: indigo; color: whitesmoke">
        <h1>Agregar dispositivo estándar</h1>
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <label>Nombre</label>
            @Html.EditorFor(model => model.NombreGenerico, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreGenerico, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label>Consumo</label>
            @Html.EditorFor(model => model.Consumo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Consumo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label>Uso mensual máximo</label>
            @Html.EditorFor(model => model.UsoMensualMax, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UsoMensualMax, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label>Uso mensual mínimo</label>
            @Html.EditorFor(model => model.UsoMensualMin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UsoMensualMin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label>Uso estimado</label>
            @Html.EditorFor(model => model.UsoEstimado, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UsoEstimado, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" value="Agregar" class="btn btn-default" style="color: whitesmoke; background-color: indigo" />
    <br><br>
</div>
}

    <div>
        @Html.ActionLink("Volver al listado", "Index", "DispositivoCliente")
    </div>
