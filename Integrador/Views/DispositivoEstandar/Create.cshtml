@model Integrador.Models.Helper.DispositivoConcreto

@{
    ViewBag.Title = "Agregar dispositivo estándar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron" style="background-color: indigo; color: whitesmoke">
    <h1>Agregar dispositivo estandar</h1>
</div>

@using (Html.BeginForm("Create", "DispositivoEstandar", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label>Dispositivo: </label>
                @Html.DropDownListFor(x => x.IdDispositivo, new SelectList(ViewBag.Dispositivos, "Value", "Text"), new { @class = "form-control dropdown-field" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Uso aproximado</label>
                @Html.EditorFor(model => model.UsoAproximado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UsoAproximado, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Agregar" class="btn btn-default" style="color: whitesmoke; background-color: indigo" />
        <br><br>
    </div>
}


<div>
    @Html.ActionLink("Volver al listado", "Index", "DispositivoCliente")
</div>
