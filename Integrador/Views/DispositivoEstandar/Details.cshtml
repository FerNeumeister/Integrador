@model Integrador.Models.DispositivoEstandar

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>DispositivoEstandar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreGenerico)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreGenerico)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Consumo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consumo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsoMensualMax)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsoMensualMax)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsoMensualMin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsoMensualMin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsoEstimado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsoEstimado)
        </dd>

    </dl>
</div>
<p>
    @if (Model.ModuloAdaptador != null)
    {
        if (Model.ModuloAdaptador.Encendido)
        {
            using (Html.BeginForm())
            {
                @Ajax.ActionLink("Apagar", "Apagar", new { id = Model.Id }, new AjaxOptions { HttpMethod = "POST" })
            }
        }
        else
        {
            using (Html.BeginForm())
            {
                @Ajax.ActionLink("Encender", "Encender", new { id = Model.Id }, new AjaxOptions { HttpMethod = "POST" })
            }
        }
        <span>|</span>
        using (Html.BeginForm())
        {
            @Ajax.ActionLink("Modo ahorro", "ActivarAhorro", new { id = Model.Id }, new AjaxOptions { HttpMethod = "POST" })
        }
    }
    else
    {
        @Html.ActionLink("Adaptar", "Edit", new { id = Model.Id })
    }|
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Volver al listado", "Index", "DispositivoCliente")
</p>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.apagarButton').click(function () {
            $(this).closest('form')[0].submit();
        });
    });
</script>
